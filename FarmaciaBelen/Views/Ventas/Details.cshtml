@model FarmaciaBelen.Models.ViewModel.VentaViewModel
@{
    ViewBag.Title = "Detalle de Venta";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Detalle de Venta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4" id="detalleVenta">
        <div class="card shadow">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Detalle de Venta</h4>
                <button class="btn btn-light" onclick="window.print()">🖨 Imprimir</button>
            </div>
            <div class="card-body">
                <div class="mb-3 row">
                    <div class="col-md-3"><strong>Código de Venta:</strong> @Model.VENTA_ID</div>
                    <div class="col-md-3"><strong>Fecha:</strong> @Model.VENTA_FECHA</div>
                    <div class="col-md-3"><strong>Cliente:</strong> @Model.CLIENTE_NOMBRE</div>
                    <div class="col-md-3"><strong>Vendedor:</strong> @Model.USUARIO_NOMBRE</div>
                </div>

                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th>Imagen</th>
                            <th>Precio Unitario</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Detalles)
                        {
                            <tr>
                                <td>@item.PRODUCTO_NOMBRE</td>
                                <td><img src="@item.PRODUCTO_IMG" style="width: 70px;" class="img-thumbnail" /></td>
                                <td>@item.DETALLEVENTA_PRECIOUNITARIO</td>
                                <td>@item.DETALLEVENTA_CANTIDADVENDIDA</td>
                                <td>@(item.DETALLEVENTA_CANTIDADVENDIDA * item.DETALLEVENTA_PRECIOUNITARIO)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="4" class="text-end">Total</th>
                            <th>@Model.VENTA_TOTAL</th>
                        </tr>
                    </tfoot>
                </table>
                <a href="@Url.Action("Index")" class="btn btn-secondary">← Volver</a>
            </div>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
