@*@model FarmaciaBelen.Models.CLIENTE*@

@model FarmaciaBelen.Models.ClienteViewModel




@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrar Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    }

    <!-- Código (readonly) -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Registrar Nuevo Cliente</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <!-- Código (readonly) -->
                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.Persona.PERSONA_ID, "Código", new { @class = "form-label" })*</b>
                                @Html.TextBoxFor(model => model.Persona.PERSONA_ID, new { @class = "form-control", @readonly = "readonly" })

                                @Html.HiddenFor(model => model.Persona.PERSONA_ID)

                            </div>

                            <!-- Persona (nombre, apellidos, nit, etc) -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_PRIMERNOMBRE, new { @class = "form-label" })*</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_PRIMERNOMBRE, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese primer nombre (máximo 50 caracteres)"

                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_PRIMERNOMBRE, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, new
                                    {
                                        htmlAttributes = new
                                   {
                                       @class = "form-control",
                                       maxlength = "50",
                                       placeholder = "Ingrese segundo nombre (máximo 50 caracteres)"
                                   }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_TERCERNOMBRE, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_TERCERNOMBRE, new
                                    {
                                        htmlAttributes = new
                                   {
                                       @class = "form-control",
                                       maxlength = "50",
                                       placeholder = "Ingrese tercer nombre (máximo 50 caracteres)"
                                   }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TERCERNOMBRE, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, new { @class = "form-label" })*</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese primer apellido (máximo 50 caracteres)"
                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese segundo apellido (máximo 50 caracteres)"
                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_APELLIDOCASADA, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_APELLIDOCASADA, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese apellido casada (máximo 50 caracteres)"
                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_APELLIDOCASADA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_NIT, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_NIT, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "10",
                                   placeholder = "Ingrese el nit (máximo 10 digitos)"
                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_NIT, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_CUI, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_CUI, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "13",
                                   placeholder = "Ingrese el CUI (máximo 13 digitos)"
                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_CUI, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Persona.PERSONA_DIRECCION, new { @class = "form-label" })*</b>
                                @Html.EditorFor(m => m.Persona.PERSONA_DIRECCION, new
                                {
                                    htmlAttributes = new
                           {
                               @class = "form-control",
                               maxlength = "150",
                               placeholder = "Ingrese la dirección (máximo 150 caracteres)"
                           }
                                })
                                @Html.ValidationMessageFor(m => m.Persona.PERSONA_DIRECCION, "", new { @class = "text-danger" })
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_TELEFONOMOVIL, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_TELEFONOMOVIL, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "8",
                                   placeholder = "Ingrese telefono movil (máximo 8 digitos)"
                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TELEFONOMOVIL, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_TELEFONOCASA, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_TELEFONOCASA, new
                                    {
                                        htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "8",
                                   placeholder = "Ingrese telefono de casa (máximo 8 digitos)"
                               }
                                    })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TELEFONOCASA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Persona.PERSONA_CORREO, new { @class = "form-label" })</b>
                                @Html.EditorFor(m => m.Persona.PERSONA_CORREO, new
                                {
                                    htmlAttributes = new
                           {
                               @class = "form-control",
                               @type = "email",
                               //maxlength = "50",
                               placeholder = "Ingrese el correo electronico"
                           }
                                })
                                @Html.ValidationMessageFor(m => m.Persona.PERSONA_CORREO, "", new { @class = "text-danger" })
                            </div>
                            <!-- Datos del empleado -->
                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.Cliente.CLIENTE_NOTA, new { @class = "form-label" })</b>
                                @Html.TextAreaFor(model => model.Cliente.CLIENTE_NOTA, new
                                {
                                    @class = "form-control",
                                    maxlength = "255",
                                    rows = "4", // opcional: define cuántas filas visibles tiene el textarea
                                    placeholder = "Ingrese la descripción de la categoría (máximo 255 caracteres)"
                                })
                                @Html.ValidationMessageFor(model => model.Cliente.CLIENTE_NOTA, "", new { @class = "text-danger" })
                            </div>


                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Cliente.CLIENTE_ESTADO, new { @class = "form-label" })*</b>
                                @Html.DropDownListFor(m => m.Cliente.CLIENTE_ESTADO,
                                    new SelectList(new[] {
                                        new { Text = "Activo", Value = "Activo" },
                                        new { Text = "Inactivo", Value = "Inactivo" }
                                    }, "Value", "Text", Model.Cliente.CLIENTE_ESTADO), "Seleccione un estado",
                                    new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Cliente.CLIENTE_ESTADO, "", new { @class = "text-danger" })
                            </div>



                            <!-- Botones -->
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">← Volver a la lista</a>
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Guardar Cliente</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @* Si deseas mostrar un modal de confirmación después de guardar, puedes usar algo similar a esto: *@
    <div class="modal fade" id="modalCreado" tabindex="-1" aria-labelledby="modalCreadoLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalCreadoLabel">Cliente creada</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¡Cliente registrado exitosamente!
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Ir al listado</a>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @if (ViewBag.Creado != null && (bool)ViewBag.Creado)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var modal = new bootstrap.Modal(document.getElementById('modalCreado'));
                modal.show();
            });
        </script>
    }
</body>
</html>
