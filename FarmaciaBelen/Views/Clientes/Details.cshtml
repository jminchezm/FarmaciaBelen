@model FarmaciaBelen.Models.ClienteViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detalles del Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><b>Detalles del Cliente:</b> @Html.DisplayFor(model => model.Cliente.CLIENTE_ID)</h4>
            </div>
            <div class="card-body">

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Nombre Completo:</div>
                    <div class="col-sm-8">
                        @Model.Persona.PERSONA_PRIMERNOMBRE
                        @Model.Persona.PERSONA_SEGUNDONOMBRE
                        @Model.Persona.PERSONA_PRIMERAPELLIDO
                        @Model.Persona.PERSONA_SEGUNDOAPELLIDO
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">NIT:</div>
                    <div class="col-sm-8">@Model.Persona.PERSONA_NIT</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">CUI:</div>
                    <div class="col-sm-8">@Model.Persona.PERSONA_CUI</div>
                </div>

                <!-- Dirección -->
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Dirección:</div>
                    <div class="col-sm-8">@Model.Persona.PERSONA_DIRECCION</div>
                </div>

                <!-- Teléfono y correo -->
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Teléfono Casa:</div>
                    <div class="col-sm-8">@Model.Persona.PERSONA_TELEFONOCASA</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Teléfono Móvil:</div>
                    <div class="col-sm-8">@Model.Persona.PERSONA_TELEFONOMOVIL</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Correo Electrónico:</div>
                    <div class="col-sm-8">@Model.Persona.PERSONA_CORREO</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Fecha de registro:</div>
                    <div class="col-sm-8">@Model.Persona.PERSONA_FECHAREGISTRO</div>
                </div>


                <!-- Puesto -->
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Nota:</div>
                    <div class="col-sm-8">@Model.Cliente.CLIENTE_NOTA</div>
                </div>

            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="@Url.Action("Edit", new { id = Model.Cliente.CLIENTE_ID })" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + FontAwesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>


</body>
</html>
