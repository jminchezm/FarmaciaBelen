
@model  FarmaciaBelen.Models.ViewModel.RecoveryPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - Farmacia Belén</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <!-- Contenedor para centrar el formulario -->
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow p-4" style="width: 400px;">

            <img src="~/Content/Images/Home/logoBarraInicio.png" alt="Logo" class="img-fluid mb-3 mx-auto d-block" style="max-width: 100px;">
            <h4 class="mb-4 fw-bold mx-auto">Reseteo de contraseña</h4>


            <form action="@Url.Content("~/Access/Recovery")" method="post">
                @Html.HiddenFor(d => d.token)
                <div class="mb-3">
                    <label>Ingrese una nueva contraseña* </label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    @*@Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


                    <label> Confirme su Contraseña </label>
                    @Html.PasswordFor(model => model.Password2, new { @class = "form-control" })
                    @*@Html.PasswordFor(model => model.Password2, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.Password2, "", new { @class = "text-danger" })
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100 " onclick="mostrarModal()">Establezca su contraseña</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 5px;">
                <!-- Reduce border-radius para un look más cuadrado -->
                <div class="modal-header bg-success text-white" style="border-radius: 5px 5px 0 0;">
                    <h5 class="modal-title" id="successModalLabel">Éxito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Contraseña Actualizada exitosamente
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-primary" onclick="redirigirLogin()">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function mostrarModal() {
        var myModal = new bootstrap.Modal(document.getElementById('successModal'));
        myModal.show();
    }

    function redirigirLogin() {
        window.location.href = "@Url.Action("Index", "Login")";
    }
    </script>

</body>
</html>