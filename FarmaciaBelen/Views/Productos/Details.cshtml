@model FarmaciaBelen.Models.PRODUCTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detalles del Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    @*<i class="fas fa-capsules fa-lg me-2"></i>*@
                    <h5 class="mb-0"><i class="fas fa-tags me-2"></i> <b>Detalles del Producto </b> @Html.DisplayFor(model => model.PRODUCTO_ID)</h5>
                </div>

                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold"></div>
                        <div class="col-md-8">
                            @if (!string.IsNullOrEmpty(Model.PRODUCTO_IMG))
                            {
                                <img src="@Url.Content(Model.PRODUCTO_IMG)" alt="Imagen del producto" class="img-thumbnail" style="max-height: 200px;" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Content/ImagenesProductos/default.png")" alt="Imagen por defecto" class="img-thumbnail img-producto" style="max-height: 200px;" />
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Nombre:</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.PRODUCTO_NOMBRE)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Descripción:</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.PRODUCTO_DESCRIPCION)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Fecha de Creación:</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.PRODUCTO_FECHACREACION)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Casa Médica:</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.PRODUCTO_CASAMEDICA)</div>
                    </div>



                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Estado:</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.PRODUCTO_ESTADO)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Forma Farmacéutica:</div>
                        <div class="col-md-8">(@Html.DisplayFor(model => model.FORMAFARMACEUTICA.FORMAFARMACEUTICA_ID)) @Html.DisplayFor(model => model.FORMAFARMACEUTICA.FARMAFARMACEUTICA_NOMBRE)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Subcategoría:</div>
                        <div class="col-md-8">(@Html.DisplayFor(model => model.SUBCATEGORIAPRODUCTO.SUBCATEGORIAPRODUCTO_ID)) @Html.DisplayFor(model => model.SUBCATEGORIAPRODUCTO.SUBCATEGORIAPRODUCTO_NOMBRE)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold">Vía de Administración:</div>
                        <div class="col-md-8">(@Html.DisplayFor(model => model.VIAADMINISTRACION.VIAADMINISTRACION_ID)) @Html.DisplayFor(model => model.VIAADMINISTRACION.VIAADMINISTRATIVA_NOMBRE)</div>
                    </div>

                </div>

                <div class="card-footer bg-white d-flex justify-content-between">
                    <a href="@Url.Action("Edit", new { id = Model.PRODUCTO_ID })" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i> Editar
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver a la lista
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
