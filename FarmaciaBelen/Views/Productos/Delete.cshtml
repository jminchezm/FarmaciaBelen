@model FarmaciaBelen.Models.PRODUCTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <h5 class="mb-0">¿Estás seguro que deseas desactivar este producto?</h5>
                    </div>
                    <div class="card-body">


                        <div class="row mb-4 text-center">
                            <div class="col">
                                @if (!string.IsNullOrEmpty(Model.PRODUCTO_IMG))
                                {
                                    <img src="@Url.Content(Model.PRODUCTO_IMG)" alt="Imagen del producto" class="img-thumbnail" style="max-height: 200px;" />
                                }
                                else
                                {
                                    <img src="@Url.Content("~/Content/ImagenesProductos/default.png")" alt="Imagen por defecto" class="img-thumbnail img-producto" style="max-height: 200px;" />

                                }
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Nombre:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.PRODUCTO_NOMBRE)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Descripción:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.PRODUCTO_DESCRIPCION)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Fecha de Creación:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.PRODUCTO_FECHACREACION)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Casa Médica:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.PRODUCTO_CASAMEDICA)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Estado:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.PRODUCTO_ESTADO)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Forma Farmacéutica:</div>
                            <div class="col-sm-8">(@Html.DisplayFor(model => model.FORMAFARMACEUTICA.FORMAFARMACEUTICA_ID)) @Html.DisplayFor(model => model.FORMAFARMACEUTICA.FARMAFARMACEUTICA_NOMBRE)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Subcategoría:</div>
                            <div class="col-sm-8">(@Html.DisplayFor(model => model.SUBCATEGORIAPRODUCTO.SUBCATEGORIAPRODUCTO_ID)) @Html.DisplayFor(model => model.SUBCATEGORIAPRODUCTO.SUBCATEGORIAPRODUCTO_NOMBRE)</div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-4 fw-bold">Vía de Administración:</div>
                            <div class="col-sm-8">(@Html.DisplayFor(model => model.VIAADMINISTRACION.VIAADMINISTRACION_ID)) @Html.DisplayFor(model => model.VIAADMINISTRACION.VIAADMINISTRATIVA_NOMBRE)</div>
                        </div>



                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Desactivar
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de desactivación -->
    <div class="modal fade" id="modalDesactivado" tabindex="-1" aria-labelledby="modalDesactivadoLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalDesactivadoLabel">Producto desactivado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    El producto fue desactivado correctamente.
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Ir al listado</a>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + FontAwesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    @if (ViewBag.Desactivado != null && (bool)ViewBag.Desactivado)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var modal = new bootstrap.Modal(document.getElementById('modalDesactivado'));
                modal.show();
            });
        </script>
    }
</body>
</html>
