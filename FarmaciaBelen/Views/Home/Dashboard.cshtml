        // Submenús
        document.querySelectorAll('.submenu-toggle').forEach(function (toggle) {
            toggle.addEventListener('click', function (event) {
                event.preventDefault();

                var submenuActual = this.nextElementSibling;

                // Si el submenú actual ya está visible, lo ocultamos
                if (submenuActual.style.display === 'block') {
                    submenuActual.style.display = 'none';
                } else {
                    // Ocultamos todos los submenús
                    document.querySelectorAll('.submenu').forEach(function (submenu) {
                        submenu.style.display = 'none';
                    });

                    // Mostramos el submenú relacionado a este toggle
                    submenuActual.style.display = 'block';
                }
            });
        });


