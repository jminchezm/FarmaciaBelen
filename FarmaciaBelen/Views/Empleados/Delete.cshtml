@model FarmaciaBelen.Models.EmpleadoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Desactivar Empleado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <h5 class="mb-0">¿Estás seguro que deseas desactivar este empleado?</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Código:</div>
                            <div class="col-sm-8">@Model.Persona.PERSONA_ID</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Nombre:</div>
                            <div class="col-sm-8">
                                @Model.Persona.PERSONA_PRIMERNOMBRE
                                @Model.Persona.PERSONA_SEGUNDONOMBRE
                                @Model.Persona.PERSONA_PRIMERAPELLIDO
                                @Model.Persona.PERSONA_SEGUNDOAPELLIDO
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Puesto:</div>
                            <div class="col-sm-8">@Model.Empleado.PUESTO.PUESTO_NOMBRE</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Estado actual:</div>
                            <div class="col-sm-8">@Model.Empleado.EMPLEADO_ESTADO</div>
                        </div>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Empleado.EMPLEADO_ID)

                            <div class="d-flex justify-content-between mt-4">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-user-slash"></i> Desactivar
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalDesactivado" tabindex="-1" aria-labelledby="modalDesactivadoLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalDesactivadoLabel">Empleado desactivado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    El empleado fue desactivado correctamente.
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Ir al listado</a>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @if (ViewBag.Desactivado != null && (bool)ViewBag.Desactivado)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var modal = new bootstrap.Modal(document.getElementById('modalDesactivado'));
                modal.show();
            });
        </script>
    }

</body>
</html>


