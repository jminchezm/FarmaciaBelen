@model FarmaciaBelen.Models.EmpleadoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrar Empleado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Registrar Nuevo Empleado</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <!-- Código (readonly) -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Persona.PERSONA_ID, "Código", new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.Persona.PERSONA_ID, new { @class = "form-control", @readonly = "readonly" })

                                @Html.HiddenFor(model => model.Persona.PERSONA_ID)

                            </div>

                            <!-- Persona (nombre, apellidos, nit, etc) -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_PRIMERNOMBRE, new { @class = "form-label" })*
                                    @Html.EditorFor(m => m.Persona.PERSONA_PRIMERNOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_PRIMERNOMBRE, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_TERCERNOMBRE, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_TERCERNOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TERCERNOMBRE, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, new { @class = "form-label" })*
                                    @Html.EditorFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_APELLIDOCASADA, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_APELLIDOCASADA, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_APELLIDOCASADA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_NIT, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_NIT, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_NIT, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_CUI, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_CUI, new { htmlAttributes = new { @class = "form-control"} })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_CUI, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Persona.PERSONA_DIRECCION, new { @class = "form-label" })*
                                @Html.EditorFor(m => m.Persona.PERSONA_DIRECCION, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.Persona.PERSONA_DIRECCION, "", new { @class = "text-danger" })
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_TELEFONOMOVIL, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_TELEFONOMOVIL, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TELEFONOMOVIL, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.Persona.PERSONA_TELEFONOCASA, new { @class = "form-label" })
                                    @Html.EditorFor(m => m.Persona.PERSONA_TELEFONOCASA, new { htmlAttributes = new { @class = "form-control"} })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TELEFONOCASA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Persona.PERSONA_CORREO, new { @class = "form-label" })
                                @Html.EditorFor(m => m.Persona.PERSONA_CORREO, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                                @Html.ValidationMessageFor(m => m.Persona.PERSONA_CORREO, "", new { @class = "text-danger" })
                            </div>

                            <!-- Datos del empleado -->
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Empleado.EMPLEADO_FECHANACIMIENTO, new { @class = "form-label" })*
                                @Html.EditorFor(m => m.Empleado.EMPLEADO_FECHANACIMIENTO, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_FECHANACIMIENTO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Empleado.EMPLEADO_FECHAINGRESO, new { @class = "form-label" })*
                                @Html.EditorFor(m => m.Empleado.EMPLEADO_FECHAINGRESO, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_FECHAINGRESO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Empleado.EMPLEADO_GENERO, new { @class = "form-label" })*
                                @Html.DropDownListFor(m => m.Empleado.EMPLEADO_GENERO,
                                    new SelectList(new[] {
                                        new { Text = "Masculino", Value = "Masculino" },
                                        new { Text = "Femenino", Value = "Femenino" }
                                    }, "Value", "Text", Model.Empleado.EMPLEADO_GENERO),
                                    new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_GENERO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Empleado.EMPLEADO_ESTADO, new { @class = "form-label" })*
                                @Html.DropDownListFor(m => m.Empleado.EMPLEADO_ESTADO,
                                    new SelectList(new[] {
                                        new { Text = "Activo", Value = "Activo" },
                                        new { Text = "Inactivo", Value = "Inactivo" }
                                    }, "Value", "Text", Model.Empleado.EMPLEADO_ESTADO),
                                    new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_ESTADO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Empleado.PUESTO_ID, "Puesto", new { @class = "form-label" })*
                                @Html.DropDownListFor(m => m.Empleado.PUESTO_ID, (SelectList)ViewBag.Puestos, "Seleccione un puesto", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Empleado.PUESTO_ID, "", new { @class = "text-danger" })
                            </div>

                            <!-- Botones -->
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">← Volver a la lista</a>
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Guardar Empleado</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de confirmación -->
    <div class="modal fade" id="modalCreado" tabindex="-1" aria-labelledby="modalCreadoLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalCreadoLabel">Empleado creado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¡El nuevo empleado fue registrado exitosamente!
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Ir al listado</a>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @if (ViewBag.Creado != null && (bool)ViewBag.Creado)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var modal = new bootstrap.Modal(document.getElementById('modalCreado'));
                modal.show();
            });
        </script>
    }
</body>
</html>
