@model FarmaciaBelen.Models.EmpleadoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Empleado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0"><b>Editar Empleado:</b> @Html.DisplayFor(model => model.Empleado.EMPLEADO_ID)</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Persona.PERSONA_ID)
                            @Html.HiddenFor(m => m.Empleado.EMPLEADO_ID)

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_PRIMERNOMBRE, new { @class = "form-label" })*</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_PRIMERNOMBRE, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese primer nombre (máximo 50 caracteres)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_PRIMERNOMBRE, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese segundo nombre (máximo 50 caracteres)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_SEGUNDONOMBRE, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_TERCERNOMBRE, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_TERCERNOMBRE, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese tercer nombre (máximo 50 caracteres)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TERCERNOMBRE, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, new { @class = "form-label" })*</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese primer apellido (máximo 50 caracteres)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_PRIMERAPELLIDO, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese segundo apellido (máximo 50 caracteres)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_SEGUNDOAPELLIDO, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_APELLIDOCASADA, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_APELLIDOCASADA, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "50",
                                   placeholder = "Ingrese apellido casada (máximo 50 caracteres)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_APELLIDOCASADA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_NIT, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_NIT, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "10",
                                   placeholder = "Ingrese el nit (máximo 10 digitos)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_NIT, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_CUI, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_CUI, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "13",
                                   placeholder = "Ingrese el CUI (máximo 13 digitos)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_CUI, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Persona.PERSONA_DIRECCION, new { @class = "form-label" })*</b>
                                @Html.EditorFor(m => m.Persona.PERSONA_DIRECCION, new { htmlAttributes = new
                           {
                               @class = "form-control",
                               maxlength = "150",
                               placeholder = "Ingrese la dirección (máximo 150 caracteres)"
                           } })
                                @Html.ValidationMessageFor(m => m.Persona.PERSONA_DIRECCION, "", new { @class = "text-danger" })
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_TELEFONOMOVIL, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_TELEFONOMOVIL, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "8",
                                   placeholder = "Ingrese telefono movil (máximo 8 digitos)"
                               } })
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TELEFONOMOVIL, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <b>@Html.LabelFor(m => m.Persona.PERSONA_TELEFONOCASA, new { @class = "form-label" })</b>
                                    @Html.EditorFor(m => m.Persona.PERSONA_TELEFONOCASA, new { htmlAttributes = new
                               {
                                   @class = "form-control",
                                   maxlength = "8",
                                   placeholder = "Ingrese telefono de casa (máximo 8 digitos)"
                               }})
                                    @Html.ValidationMessageFor(m => m.Persona.PERSONA_TELEFONOCASA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Persona.PERSONA_CORREO, new { @class = "form-label" })</b>
                                @Html.EditorFor(m => m.Persona.PERSONA_CORREO, new { htmlAttributes = new
                           {
                               @class = "form-control",
                               @type = "email",
                               //maxlength = "50",
                               placeholder = "Ingrese el correo electronico"
                           } })
                                @Html.ValidationMessageFor(m => m.Persona.PERSONA_CORREO, "", new { @class = "text-danger" })
                            </div>

                            <!-- Datos del empleado -->
                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Empleado.EMPLEADO_FECHANACIMIENTO, new { @class = "form-label" })*</b>
                                @Html.TextBoxFor(m => m.Empleado.EMPLEADO_FECHANACIMIENTO,
                                    "{0:yyyy-MM-dd}",
                                    new { @class = "form-control", type = "date" })
                                @*@Html.EditorFor(m => m.Empleado.EMPLEADO_FECHANACIMIENTO, new { htmlAttributes = new { @class = "form-control", @type = "date" } })*@
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_FECHANACIMIENTO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Empleado.EMPLEADO_FECHAINGRESO, new { @class = "form-label" })*</b>
                                @Html.TextBoxFor(m => m.Empleado.EMPLEADO_FECHAINGRESO,
                                    "{0:yyyy-MM-dd}",
                                    new { @class = "form-control", type = "date" })
                                @*@Html.EditorFor(m => m.Empleado.EMPLEADO_FECHAINGRESO, new { htmlAttributes = new { @class = "form-control", @type = "date" } })*@
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_FECHAINGRESO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Empleado.EMPLEADO_GENERO, new { @class = "form-label" })*</b>
                                @Html.DropDownListFor(m => m.Empleado.EMPLEADO_GENERO,
                                    new SelectList(new[] {
                                        new { Text = "Masculino", Value = "Masculino" },
                                        new { Text = "Femenino", Value = "Femenino" }
                                    }, "Value", "Text", Model.Empleado.EMPLEADO_GENERO),
                                    new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_GENERO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Empleado.EMPLEADO_ESTADO, new { @class = "form-label" })*</b>
                                @Html.DropDownListFor(m => m.Empleado.EMPLEADO_ESTADO,
                                    new SelectList(new[] {
                                        new { Text = "Activo", Value = "Activo" },
                                        new { Text = "Inactivo", Value = "Inactivo" }
                                    }, "Value", "Text", Model.Empleado.EMPLEADO_ESTADO),
                                    new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Empleado.EMPLEADO_ESTADO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(m => m.Empleado.PUESTO_ID, "Puesto", new { @class = "form-label" })*</b>
                                @Html.DropDownListFor(m => m.Empleado.PUESTO_ID, (SelectList)ViewBag.Puestos, "Seleccione un puesto", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Empleado.PUESTO_ID, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancelar</a>
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Cambios</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de edición exitosa -->
    <div class="modal fade" id="modalEditado" tabindex="-1" aria-labelledby="modalEditadoLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalEditadoLabel">Empleado actualizado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    Los cambios fueron guardados correctamente.
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Ir al listado</a>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Editado != null && (bool)ViewBag.Editado)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var modal = new bootstrap.Modal(document.getElementById('modalEditado'));
                modal.show();
            });
        </script>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
