@model FarmaciaBelen.Models.PROVEEDOR

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Editar Proveedor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0"><b>Editar Proveedor:</b> @Html.DisplayFor(model => model.PROVEEDOR_ID)</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.PROVEEDOR_ID)

                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.PROVEEDOR_NOMBRE, new { @class = "form-label" })*</b>
                                @Html.EditorFor(model => model.PROVEEDOR_NOMBRE, new
                                {
                                    htmlAttributes = new
                           {
                               @class = "form-control",
                               maxlength = "100",
                               placeholder = "Ingrese el nombre del proveedor (máximo 100 caracteres)"
                           }
                                })
                                @Html.ValidationMessageFor(model => model.PROVEEDOR_NOMBRE, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.PROVEEDOR_TELEFONO, new { @class = "form-label" })</b>
                                @Html.EditorFor(model => model.PROVEEDOR_TELEFONO, new
                                {
                                    htmlAttributes = new
                           {
                               @class = "form-control",
                               //maxlength = "100",
                               placeholder = "Ingrese el número de telefono del proveedor (máximo 8 digitos)"
                           }
                                })
                                @Html.ValidationMessageFor(model => model.PROVEEDOR_TELEFONO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.PROVEEDOR_CELULAR, new { @class = "form-label" })</b>
                                @Html.EditorFor(model => model.PROVEEDOR_CELULAR, new
                                {
                                    htmlAttributes = new
                           {
                               @class = "form-control",
                               //maxlength = "100",
                               placeholder = "Ingrese el número de celular del proveedor (máximo 8 digitos)"
                           }
                                })
                                @Html.ValidationMessageFor(model => model.PROVEEDOR_CELULAR, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.PROVEEDOR_CORREO, new { @class = "form-label" })</b>
                                @Html.EditorFor(model => model.PROVEEDOR_CORREO, new
                                {
                                    htmlAttributes = new
                           {
                               @class = "form-control",
                               maxlength = "50",
                               placeholder = "Ingrese el correo electrónico del proveedor"
                           }
                                })
                                @Html.ValidationMessageFor(model => model.PROVEEDOR_CORREO, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.PROVEEDOR_DIRECCION, new { @class = "form-label" })</b>
                                @Html.EditorFor(model => model.PROVEEDOR_DIRECCION, new
                                {
                                    htmlAttributes = new
                           {
                               @class = "form-control",
                               maxlength = "255",
                               placeholder = "Ingrese la dirección del proveedor (máximo 255 caracteres)"
                           }
                                })
                                @Html.ValidationMessageFor(model => model.PROVEEDOR_DIRECCION, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <b>@Html.LabelFor(model => model.PROVEEDOR_ESTADO, new { @class = "form-label" })*</b>

                                @Html.DropDownListFor(model => model.PROVEEDOR_ESTADO,
                                    new SelectList(
                                        new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Activo", Value = "Activo" },
                                            new SelectListItem { Text = "Inactivo", Value = "Inactivo" }
                                        },
                                        "Value",
                                        "Text",
                                        Model?.PROVEEDOR_ESTADO ?? "Activo"
                                    ),
                                    htmlAttributes: new { @class = "form-select" })

                                @Html.ValidationMessageFor(model => model.PROVEEDOR_ESTADO, "", new { @class = "text-danger" })
                            </div>

                            @*<div class="mb-3">
                <b>@Html.LabelFor(model => model.PROVEEDOR_ESTADO, new { @class = "form-label" })*</b>
                @Html.EditorFor(model => model.PROVEEDOR_ESTADO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PROVEEDOR_ESTADO, "", new { @class = "text-danger" })
            </div>*@

                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Guardar Cambios
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de edición exitosa -->
    <div class="modal fade" id="modalEditado" tabindex="-1" aria-labelledby="modalEditadoLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalEditadoLabel">Rol actualizado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    Los cambios fueron guardados correctamente.
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Ir al listado</a>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + FontAwesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @if (ViewBag.Editado != null && (bool)ViewBag.Editado)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var modal = new bootstrap.Modal(document.getElementById('modalEditado'));
                modal.show();
            });
        </script>
    }

</body>
</html>
