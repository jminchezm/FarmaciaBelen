@model FarmaciaBelen.Models.PROVEEDOR

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detalles del Proveedor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><b>Detalles del Proveedor:</b> @Html.DisplayFor(model => model.PROVEEDOR_ID)</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Nombre:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.PROVEEDOR_NOMBRE)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Teléfono:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.PROVEEDOR_TELEFONO)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Celular:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.PROVEEDOR_CELULAR)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Correo:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.PROVEEDOR_CORREO)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Dirección:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.PROVEEDOR_DIRECCION)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Estado:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.PROVEEDOR_ESTADO)</div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="@Url.Action("Edit", new { id = Model.PROVEEDOR_ID })" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
