@model FarmaciaBelen.Models.USUARIO

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detalles del Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><b>Detalles del Usuario:</b> @Html.DisplayFor(model => model.USUARIO_ID)</h4>
            </div>
            <div class="card-body">

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Código:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.USUARIO_ID)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Nombre de Usuario:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.USUARIO_NOMBRE)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Fecha y Hora de Registro:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.USUARIO_FECHAREGISTRO)</div>
                </div>

                @*<div class="row mb-3">
            <div class="col-sm-4 fw-bold">Token de Recuperación:</div>
            <div class="col-sm-8">@Html.DisplayFor(model => model.TOKEN_RECOVERY)</div>
        </div>*@

                @*<div class="row mb-3">
            <div class="col-sm-4 fw-bold">Género del Empleado:</div>
            <div class="col-sm-8">@Html.DisplayFor(model => model.EMPLEADO.EMPLEADO_GENERO)</div>
        </div>*@

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Rol Asignado:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.ROL.ROL_NOMBRE)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Estado del Usuario:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.USUARIO_ESTADO)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Código del Empleado:</div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.EMPLEADO.EMPLEADO_ID)</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Nombre del Empleado:</div>
                    <div class="col-sm-8">
                        @Html.DisplayFor(model => model.EMPLEADO.PERSONA.PERSONA_PRIMERNOMBRE)
                        @Html.DisplayFor(model => model.EMPLEADO.PERSONA.PERSONA_SEGUNDONOMBRE)
                        @Html.DisplayFor(model => model.EMPLEADO.PERSONA.PERSONA_TERCERNOMBRE)
                        @Html.DisplayFor(model => model.EMPLEADO.PERSONA.PERSONA_PRIMERAPELLIDO)
                        @Html.DisplayFor(model => model.EMPLEADO.PERSONA.PERSONA_SEGUNDOAPELLIDO)
                        @Html.DisplayFor(model => model.EMPLEADO.PERSONA.PERSONA_APELLIDOCASADA)
                        @*@Html.DisplayFor(model => model.EMPLEADO.PERSONA.PERSONA_PRIMERNOMBRE)*@
                    </div>
                </div>

            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="@Url.Action("Edit", new { id = Model.USUARIO_ID })" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
